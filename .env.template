# GitHub Configuration (optional)
# Set COLORCHAT_SYNC_TO_GITHUB=true to enable automatic GitHub synchronization
COLORCHAT_SYNC_TO_GITHUB=false
COLORCHAT_GITHUB_TOKEN=your_github_token_here
COLORCHAT_GITHUB_REPO=username/repository

# Logging Configuration
# Set to any value to enable debug logging to console (default: disabled)
# COLORCHAT_DEBUG=true

# Server Configuration
COLORCHAT_PORT=8000

# Key Management (optional)
# Directory to store keys (default: repo/keys)
COLORCHAT_KEYS_DIR=/path/to/keys
# Whether to sign messages by default (true/false)
COLORCHAT_SIGN_MESSAGES=true

# Enable message verification system (true/false)
COLORCHAT_MESSAGE_VERIFICATION=false
